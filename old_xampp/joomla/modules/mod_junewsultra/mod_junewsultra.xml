                        <option value="ordering_desc">MOD_JUNEWS_ORDERING2</option>
                        <option value="id_asc">MOD_JUNEWS_BY_ID1</option>
                        <option value="id_desc">MOD_JUNEWS_BY_ID2</option>
                        <option value="hits_desc">MOD_JUNEWS_BY_POPULAR</option>
