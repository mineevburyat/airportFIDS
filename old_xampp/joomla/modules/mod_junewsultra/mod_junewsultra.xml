                    <field name="class_all_in" type="text" default="" label="MOD_JUNEWS_ALL_IN_CATEGORY_CSS" description="MOD_JUNEWS_ALL_IN_CATEGORY_CSS_DESC" />

                <field name="@toggler_showsuccessmessage8_b" type="nn_toggler"/>

